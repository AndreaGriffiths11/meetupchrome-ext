{
    "name": "GitHub",
    "description": "GitHub Events",
    "version": "1.0",
    "icons": {
        "128": "icon.png"
    },
    "manifest_version": 3,
    
    "action": {
        "default_icon": "icon.png",
        "default_popup": "popup.html"
    }, 
    "permissions": [
        "tabs",
        "bookmarks",
        "unlimitedStorage"
      ],
    
      "host_permissions": [
        "http://www.blogger.com/",
        "http://*.google.com/",
        "https://ajax.googleapis.com/"
      ]
    
}